<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AnS.UI.RealmItem">
  <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,1" Height="48" Background="#FFf1f1f1">
    <CheckBox x:Name="ActiveCheck" Margin="20,0,0,0" VerticalContentAlignment="Center"></CheckBox>
    <TextBlock Margin="20,0,20,0" x:Name="ServerName" Text="Some Realm Name Goes Here" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
  </StackPanel>
</UserControl>
